<h1>Edit Post</h1>
<br>
{{> admin-navigation}}
<br>
<div class="maincontent">
  <div class="formbox">
    <form action="/admin/edit-post/{{post.id}}" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Post Title:</label>
        <input type="text" name="title" id="title" value="{{post.title}}" required>
      </div>
      <div class="form-group">
        <label for="content">Post Content:</label>
        <textarea name="content" id="content" rows="10" cols="46" required>{{post.content}}</textarea>
      </div>
      <div class="add-image">
        <p>Image:</p><br>
        <input type="file" name="image" accept="image/*"><br>
        <p>Current image: {{post.imageUrl}}</p>
      </div>
      <label for="imageDesc">Image description:</label>
      <input type="text" name="imageDesc" id="imageDesc" value="{{post.imageDesc}}">
      <br>
      <button type="submit">Update Post</button>
    </form>
  </div>
</div>
